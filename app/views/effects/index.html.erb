<%- model_class = Effect -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:target_klass) %></th>
      <th><%= model_class.human_attribute_name(:target_instance) %></th>
      <th><%= model_class.human_attribute_name(:value) %></th>
      <th><%= model_class.human_attribute_name(:effector_id) %></th>
      <th><%= model_class.human_attribute_name(:effector_type) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @effects.each do |effect| %>
      <tr>
        <td><%= link_to effect.id, effect_path(effect) %></td>
        <td><%= effect.name %></td>
        <td><%= effect.target_klass %></td>
        <td><%= effect.target_instance %></td>
        <td><%= effect.value %></td>
        <td><%= effect.effector_id %></td>
        <td><%= effect.effector_type %></td>
        <td><%=l effect.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_effect_path(effect), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      effect_path(effect),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_effect_path,
            :class => 'btn btn-primary' %>
