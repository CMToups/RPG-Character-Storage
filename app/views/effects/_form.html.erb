<%= form_for @effect, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :target_klass, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :target_klass, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :target_instance, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :target_instance, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :value, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :value, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :effector_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :effector_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :effector_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :effector_type, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                effects_path, :class => 'btn' %>
  </div>
<% end %>
