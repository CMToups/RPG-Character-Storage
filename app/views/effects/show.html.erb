<%- model_class = Effect -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @effect.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:target_klass) %>:</strong></dt>
  <dd><%= @effect.target_klass %></dd>
  <dt><strong><%= model_class.human_attribute_name(:target_instance) %>:</strong></dt>
  <dd><%= @effect.target_instance %></dd>
  <dt><strong><%= model_class.human_attribute_name(:value) %>:</strong></dt>
  <dd><%= @effect.value %></dd>
  <dt><strong><%= model_class.human_attribute_name(:effector_id) %>:</strong></dt>
  <dd><%= @effect.effector_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:effector_type) %>:</strong></dt>
  <dd><%= @effect.effector_type %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              effects_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_effect_path(@effect), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              effect_path(@effect),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
