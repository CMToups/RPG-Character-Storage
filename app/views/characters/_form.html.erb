
<%= form_for(@character) do |f| %>
  <% if @character.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@character.errors.count, "error") %> prohibited this character from being saved:</h2>

      <ul>
      <% @character.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
	<%= f.label :name %>
    <%= f.text_field :name %><br />

	<%= f.fields_for :Ability, @character.Ability do |ability| %>
    <%= ability.label :strength %>
    <%= ability.number_field :strength %><br />
	<%= ability.label :dexterity %>
    <%= ability.number_field :dexterity %><br />
	<%= ability.label :constitution %>
    <%= ability.number_field :constitution %><br />
	<%= ability.label :intelligence %>
    <%= ability.number_field :intelligence %><br />
	<%= ability.label :wisdom %>
    <%= ability.number_field :wisdom %><br />
	<%= ability.label :charisma %>
    <%= ability.number_field :charisma %><br />
	<% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
