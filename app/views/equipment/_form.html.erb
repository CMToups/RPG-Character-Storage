<%= simple_form_for(@equipment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :family %>
    <%= f.input :category %>
    <%= f.input :subcategory %>
    <%= f.input :cost %>
    <%= f.input :dmg_s %>
    <%= f.input :armor_shield_bonus %>
    <%= f.input :maximum_dex_bonus %>
    <%= f.input :dmg_m %>
    <%= f.input :weight %>
    <%= f.input :critical %>
    <%= f.input :armor_check_penalty %>
    <%= f.input :arcane_spell_failure_chance %>
    <%= f.input :range_increment %>
    <%= f.input :speed_30 %>
    <%= f.input :weapon_type %>
    <%= f.input :speed_20 %>
    <%= f.input :full_text %>
    <%= f.input :reference %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
