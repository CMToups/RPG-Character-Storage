<% @role_types = RoleType.all %>
<% model_class = RoleType %>
<%  @role_types.each do |role_type| %>
	<dl class="dl-horizontal">
	  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
	  <dd><%= role_type.name %></dd>
	  <dt><strong><%= model_class.human_attribute_name(:role_id) %>:</strong></dt>
	  <dd><%= role_type.role_id %></dd>
	  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
	  <dd><%= role_type.description %></dd>
	  <dt><strong><%= model_class.human_attribute_name(:alignment) %>:</strong></dt>
	  <dd><%= role_type.alignment %></dd>
	  <dt><strong><%= model_class.human_attribute_name(:hit_die) %>:</strong></dt>
	  <dd><%= role_type.hit_die %></dd>
	  <dt><strong><%= model_class.human_attribute_name(:skill_rank_per_level) %>:</strong></dt>
	  <dd><%= role_type.skill_rank_per_level %></dd>
	  <dt><strong><%= model_class.human_attribute_name(:spells_per_day) %>:</strong></dt>
	  <dd><%= role_type.spells_per_day %></dd>
	</dl>
<% end %>