<%- model_class = SkillType -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:ability_type) %></th>
      <th><%= model_class.human_attribute_name(:skill_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @skill_types.each do |skill_type| %>
      <tr>
        <td><%= link_to skill_type.id, skill_type_path(skill_type) %></td>
        <td><%= skill_type.name %></td>
        <td><%= skill_type.description %></td>
        <td><%= skill_type.ability_type %></td>
        <td><%= skill_type.skill_id %></td>
        <td><%=l skill_type.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_skill_type_path(skill_type), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      skill_type_path(skill_type),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_skill_type_path,
            :class => 'btn btn-primary' %>
