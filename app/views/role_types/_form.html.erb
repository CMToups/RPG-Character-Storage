<%= form_for @role_type, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :alignment, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :alignment, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :hit_die, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :hit_die, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :skill_rank_per_level, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :skill_rank_per_level, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :spells_per_day, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :spells_per_day, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                role_types_path, :class => 'btn' %>
  </div>
<% end %>
