<%- model_class = RoleType -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @role_type.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:role_id) %>:</strong></dt>
  <dd><%= @role_type.role_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @role_type.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:alignment) %>:</strong></dt>
  <dd><%= @role_type.alignment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hit_die) %>:</strong></dt>
  <dd><%= @role_type.hit_die %></dd>
  <dt><strong><%= model_class.human_attribute_name(:skill_rank_per_level) %>:</strong></dt>
  <dd><%= @role_type.skill_rank_per_level %></dd>
  <dt><strong><%= model_class.human_attribute_name(:spells_per_day) %>:</strong></dt>
  <dd><%= @role_type.spells_per_day %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              role_type_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_role_type_path(@role_type), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              role_type_path(@role_type),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
